<%# posts partial %>
<li>
     <span class="content"><%= post.content %></span>
</li>
<li>
	<table>
		<tr>
			<td class="gravatar">
				<% if post.user %>
					<% if post.user && post.user.admin? %>
						<%= image_tag("admin.jpeg", :alt => "Admin Logo", :size => "30x30") %>
					<% else %>
					  	<%= link_to gravatar_for(post.user, :size => 30 ), post.user%>
					<% end %>
				<% else %>
					<%= image_tag("questionMark.png", :alt => "Former User", :size => "30x30") %>
				<% end %>
			</td>
		  <td>
		    <span class="user">
				<% if post.user  %>
			    	<%= link_to post.user.name, post.user %> |
				<% else %>
					Former User |
				<% end %>
		    </span>
		    <span class="timestamp">
		      Posted <%= time_ago_in_words(post.created_at) %> ago.
		    </span>
		  </td>
		</tr>
	</table>
</li>